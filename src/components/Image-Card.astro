---
const { task, image } = Astro.props;


---
<div class="group flex flex-col justify-center my-2 items-center">
    <div class="card-image bg-primary"> 
      <figure class="w-80 h-[30rem] overflow-hidden">
        <img 
          src={image} 
          alt="activity image" 
          class="w-full h-full object-cover transition-all duration-300 ease-in-out hover:opacity-65 hover:scale-110 transform"
        />
      </figure>
    </div>
    <!-- Adjust width to match figure width and align content to start -->
    <div class="w-80 flex justify-start mt-4">
      <p class="text-2xl font-bold transition-all duration-300 group-hover:text-primary">{task}</p>
    </div>
  </div>