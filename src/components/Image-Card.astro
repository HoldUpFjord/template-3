---
const { task, description, image } = Astro.props;
import Divider from "./Divider.astro";

---
<div class="group flex flex-col justify-center my-2 items-center mr-40">
 <div class="card-image bg-primary"> 
    <figure class="w-64 h-96 overflow-hidden"> <!-- 2:3 portrait ratio -->
        <img 
            src={image} 
            alt="activity image" 
            class="w-full h-full object-cover transition-all duration-300 ease-in-out hover:opacity-65 hover:scale-110 transform"
        />
    </figure>
</div>
    <div class="w-64 flex justify-start">
        <p class="text-2xl font-bold transition-all duration-300 group-hover:text-primary">{task}</p>
    </div>
</div>